<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView 
        android:id="@+id/lastTaskView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/ltvDefautTxt"
	/>"
	<Button 
	    android:id="@+id/editTaskButton"
	    android:layout_toRightOf="@id/lastTaskView"
	    android:text="@+string/editTaskButtonText"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"/>
	<Button 
	    android:id="@+id/startExecutionButton"
	    android:layout_below="@id/editTaskButton"
	    android:text="@+string/startExecutionButton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    />"
	<Button 
	    android:id="@+id/stopExecutionButton"
	    android:layout_toRightOf="@id/startExecutionButton"
	    android:layout_alignBaseline="@id/startExecutionButton"
	    android:text="@+string/stopExecutionButton"
	    android:layout_height="wrap_content"
	    android:layout_width="wrap_content"
	    />
	<TextView 
	    android:id="@+id/executionChronoView"
	    android:layout_below="@id/startExecutionButton"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/eChrDefautTxt"/>
</RelativeLayout>